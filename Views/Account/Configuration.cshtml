@model UserAccount

<div class="mt-4">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3">
            <div class="list-group">
                <a href="/Account/LoadPartial?view=Credentials" class="list-group-item list-group-item-action active" id="link-change-account-data">
                    Cambiar datos de la cuenta
                </a>
                <a href="/Account/LoadPartial?view=Settings" class="list-group-item list-group-item-action" id="link-settings">
                    Configuración
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9" id="main-content">
            @await Html.PartialAsync("_AccountDetailsPartial.cshtml", Model)
        </main>
    </div>
</div>


@section Scripts {
    <script src="~/js/Account/Configuration//configurationFunctions.js?v=@DateTime.Now.Ticks"></script>
    <script src="~/js/Account/Configuration/configuration.js?v=@DateTime.Now.Ticks"></script>
    <script src="~/js/Account/Configuration/personalInformation.js?v=@DateTime.Now.Ticks"></script>
    <script src="~/js/Account/Configuration/preferences.js?v=@DateTime.Now.Ticks"></script>
}